= form_tag charges_path, class: 'hidden' do
  = hidden_field_tag 'domain[name]', @name
  script.stripe-button[src="https://checkout.stripe.com/checkout.js"
          data-key=Rails.configuration.stripe[:publishable_key]
          data-description="Payment for #{@name} domain."
          data-bitcoin=true
          data-amount=@price
          data-locale="auto"]
